<%= render 'layouts/navbar' %>

<h2 id="titleProgramasArea">Fichas Programa <%= @programa.nombre %></h2>
<section class="menuArea">
  <aside class="OpcionesArea">
    <div class="LinkAreas" id="LinkAreas">
      <i class="fa fa-chevron-circle-left" aria-hidden="true" id="Icono"></i>
      <%= link_to "Regresar",area_programas_url(@programa.area), method: :get, class: "IndexArea"%>
    </div>
    <div class="LinkAreas" id="LinkAreas">
      <i class="fa fa-plus-circle" aria-hidden="true" id="Icono"></i>
      <%= link_to "Registrar ficha", new_programa_curso_url, method: :get,
      class: "IndexArea"%>
    </div>
  </aside>

  <article class="Areas">
    <table class="table">
      <thead id="encabezado">
        <tr>
          <th id="nombreAreas">Fichas</th>
          <th id="nombreAreas">Acciones</th>
        </tr>
      </thead>
      <%= render @cursos %>
    </table>
  </article>
</section>
<%= render 'layouts/footer' %>
