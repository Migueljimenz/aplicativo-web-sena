<section class="centerPass">
  <article class="recPass">
    <h2>Olvidaste tu Contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="inicio">
  
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,id:"inputEmail", placeholder:"ingrese correo electronico",required:true %>
  </div>

  <div class="BotonRecuperar">
    <%= f.submit "Restablecer Contraseña", id:"BotonRecuperar"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </article>
</section>