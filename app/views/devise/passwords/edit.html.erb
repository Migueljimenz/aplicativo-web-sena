<section class="vistaRegistro">
  <article class="registro">
    <h2>Cambiar contrase単a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
  <br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimos)</em><br />
    <% end %>
    <br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , placeholder:"Nueva contrase単a", id:"InputConfirmationPass",required:true%>
  </div>

  <div class="field">
  <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder:"Confirmar contrase単a", id:"InputConfirmationPass",required:true%>
  </div>
<br />
  <div class="actions">
    <%= f.submit "Cambiar mi contrase単a"  , id:"BotonRegistro"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </article>
</section>  
